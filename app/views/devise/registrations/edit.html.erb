<div id="internalLogoWrapper">
	<a href="/"> <img id="internalLogo" src="http://files.bestpracticestore.com/files/images/bpslogowhiteclear.png"></a>
</div>

<p id="tagline">
	Make changes to your account
</p>

<div id="createProjectWrapper">

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
<%= devise_error_messages! %>

<div class="inputWrapper">
	<%= f.label :username %>
	<br />
	<%= f.text_field :username, :autofocus => true, class: "inputField" %>
</div>

<div class="inputWrapper">
	<%= f.label :user_company %>
	<br />
	<%= f.text_field :user_company, class: "inputField" %>
</div>

<div class="inputWrapper">
	<%= f.label :email %>
	<br />
	<%= f.email_field :email, class: "inputField" %>
</div>

<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>

<div class="inputWrapper">
	Currently waiting confirmation for: <%= resource.unconfirmed_email %>
</div>
<% end %>

<div class="inputWrapper">
	<%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
	<br />
	<%= f.password_field :password, class: "inputField", :autocomplete => "off" %>
</div>

<div class="inputWrapper">
	<%= f.label :password_confirmation %>
	<br />
	<%= f.password_field :password_confirmation, class: "inputField" %>
</div>

<div class="inputWrapper">
	<%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
	<br />
	<%= f.password_field :current_password, class: "inputField" %>
</div>

<br />

<div class="inputWrapper">
	<%= f.submit "Update", class: "signInButton" %>
</div>

<% end %>

<div class="inputWrapper">
	<%= link_to "Back", :back, class: "signInButton" %>
</div>

<br /><br />
<p style="text-align:center;">No longer a developer?</p>
<div class="inputWrapper">
	<%= button_to "Cancel account", registration_path(resource_name), id: "cancelButton", class: "signInButton", :data => { :confirm => "Are you sure?" }, :method => :delete %>
</div>


</div>
<br /><br />